<form action="/figures" method="POST">
  <p>Name <input type="text" name="figure[name]" id="figure_name"></p>
  <br>

  <h4>Titles</h4>
    <% Title.all.each do |title| %>
      <%= title.name %><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>">
      <br>
    <% end %>

  <h4>Create New Title:</h4>
    <input type="text" name="title[name]" id="new_title">
  <br>

  <h4>Landmarks</h4>
    <% Landmark.all.each do |landmark| %>
      <%= landmark.name %><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%= landmark.id%>">
      <br>
    <% end %>

  <h4>Create New Landmark:</h4>
  Name: <input type="text" name="landmark[name]" id="new_landmark">
  Year: <input type="text" name="landmark[year_completed]">
  <br><br>

  <input type="submit" value="Create New Figure">
</form>
