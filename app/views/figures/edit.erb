<h2>Edit Historical Figure</h2>

<form method="POST" action="/figures/<%= @figure.id %>">
    <input type="hidden" id="hidden" name="_method" value="PATCH">
    <label for="figure_name">Name:</label>
    <input type="text" id="figure_name" name="figure[name]" value="<%= @figure.name %>">
    <br>
    <label>Titles</label>
    <% @titles.each do |title| %>
    <input type="checkbox" id="title_<%= title.id %>" name="figure[title_ids][]" value="<%= title.id %>" <%= "checked" if @figure.titles.include?(title) %>><%= title.name %>
    <% end %>
    <br>

    <label for="title_name">Create New Title:</label>
    <input type="text" id="new_title" name="title[name]">
    <br>

    <label for="landmark_name">Landmarks</label>
    <% @landmarks.each do |landmark| %>
    <input type="checkbox" id="landmark_<%= landmark.id %>" name="figure[landmark_ids][]" value="<%= landmark.id %>" <%= "checked" if @figure.landmarks.include?(landmark) %>><%= landmark.name %>
    <% end %>
    <br>

    <label for="new_landmark">Create New Landmark:</label>
    <br>
    Name:
    <input type="text" id="new_landmark" name="landmark[name]">
    <br>
    Year:
    <input type="text" id="new_landmark_year" name="landmark[year_completed]">
    <br>
    
    <input type="submit" value="Edit Figure">
</form>