<h4>Edit Figure</h4>
<form action="/figures/<%=@figure.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="PATCH">
  <p>Name <input type="text" name="figure[name]" id="figure_name" value="<%=@figure.name%>"></p>

  <h4>Edit Titles</h4>
    <% Title.all.each do |title| %>
      <%= title.name %><input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" <%='checked' if @figure.titles.include?(title) %> >
      <br>
    <% end %>
    New Title: <input type="text" name="title[name]" id="new_title">

  <h4>Edit Landmarks</h4>
    <% Landmark.all.each do |landmark| %>
      <%= landmark.name %><input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" <%='checked' if @figure.landmarks.include?(landmark) %> >
      <br>
    <% end %>
    New Landmark: <input type="text" name="landmark[name]" id="new_landmark">

  <input type="submit" value="Edit Figure">
</form>
